<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - Bot Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://pro.fontawesome.com/releases/v6.0.0-beta1/css/all.css" rel="stylesheet">
    <style>
        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --danger: #ef4444;
            --accent: #10b981;
            --warning: #f59e0b;
            --bg-dark: #0c0c1d;
            --bg-card: #13132b;
            --bg-input: #0a0a1a;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --text-muted: #64748b;
            --border-color: rgba(99, 102, 241, 0.15);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--bg-dark) 0%, #1a1a3e 100%);
            color: var(--text-primary);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container { width: 100%; max-width: 420px; animation: slideInUp 0.5s ease-out; }

        @keyframes slideInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .header { text-align: center; margin-bottom: 32px; }

        .logo {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, var(--primary) 0%, #818cf8 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin: 0 auto 16px;
        }

        .header h1 { font-size: 1.75rem; font-weight: 700; margin-bottom: 8px; }
        .header p { color: var(--text-secondary); font-size: 0.9rem; }

        .card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 32px;
            margin-bottom: 16px;
        }

        .form-group { margin-bottom: 20px; }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            background: var(--bg-input);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            color: var(--text-primary);
            font-size: 0.95rem;
            transition: all 0.2s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
        }

        .error-message {
            background: rgba(239, 68, 68, 0.15);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #fca5a5;
            padding: 12px 16px;
            border-radius: 8px;
            font-size: 0.85rem;
            margin-bottom: 16px;
        }

        .success-message {
            background: rgba(16, 185, 129, 0.15);
            border: 1px solid rgba(16, 185, 129, 0.3);
            color: #86efac;
            padding: 12px 16px;
            border-radius: 8px;
            font-size: 0.85rem;
            margin-bottom: 16px;
        }

        .btn {
            width: 100%;
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.95rem;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
            background: var(--primary);
            color: white;
            min-height: 44px;
        }

        .btn:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(99, 102, 241, 0.3);
        }

        .strength-bar {
            height: 4px;
            background: var(--border-color);
            border-radius: 2px;
            overflow: hidden;
            margin-top: 4px;
        }

        .strength-fill {
            height: 100%;
            transition: all 0.3s ease;
        }

        .strength-fill.weak { width: 25%; background: var(--danger); }
        .strength-fill.fair { width: 50%; background: var(--warning); }
        .strength-fill.good { width: 75%; background: var(--accent); }
        .strength-fill.strong { width: 100%; background: var(--accent); }

        .form-hint { color: var(--text-muted); font-size: 0.75rem; margin-top: 4px; }

        @media (max-width: 480px) {
            .container { max-width: 100%; }
            .header h1 { font-size: 1.5rem; }
            .card { padding: 24px; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo"><i class="fa fa-lock"></i></div>
            <h1>Reset Password</h1>
            <p>Create a new password for your account</p>
        </div>

        <div class="card">
            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>

            <% if (success) { %>
                <div class="success-message">✓ <%= success %></div>
                <div style="text-align: center; margin-top: 16px;">
                    <a href="/login" style="color: var(--primary); text-decoration: none;">Back to Login</a>
                </div>
            <% } else { %>
                <form method="POST">
                    <div class="form-group">
                        <label class="form-label">New Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="••••••••" required>
                        <div class="form-hint">6+ chars, uppercase, lowercase, numbers required</div>
                        <div class="strength-bar"><div class="strength-fill" id="strengthFill"></div></div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" name="confirmPassword" class="form-control" placeholder="••••••••" required>
                    </div>

                    <button type="submit" class="btn">Reset Password</button>
                </form>
            <% } %>
        </div>
    </div>

    <script>
        const pwd = document.getElementById('password');
        const fill = document.getElementById('strengthFill');
        pwd?.addEventListener('input', function() {
            let strength = 0;
            if (this.value.length >= 6) strength++;
            if (this.value.length >= 10) strength++;
            if (/[A-Z]/.test(this.value) && /[a-z]/.test(this.value)) strength++;
            if (/[0-9]/.test(this.value)) strength++;
            if (/[!@#$%^&*]/.test(this.value)) strength++;
            
            fill.className = 'strength-fill';
            if (strength <= 1) fill.classList.add('weak');
            else if (strength === 2) fill.classList.add('fair');
            else if (strength <= 4) fill.classList.add('good');
            else fill.classList.add('strong');
        });
    </script>
</body>
</html>
