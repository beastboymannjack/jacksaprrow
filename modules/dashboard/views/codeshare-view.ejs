<%- include('header') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard/codeshare">Code Shares</a></li>
                    <li class="breadcrumb-item active"><%= code.name %></li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0"><%= code.name %></h4>
                        <small class="text-muted">ID: <%= code.id %></small>
                    </div>
                    <span class="badge bg-primary"><%= code.language.toUpperCase() %></span>
                </div>
                <div class="card-body">
                    <p class="lead"><%= code.description || 'No description provided' %></p>
                    
                    <% if (code.videoLink) { %>
                        <div class="mb-3">
                            <a href="<%= code.videoLink %>" target="_blank" class="btn btn-danger">
                                <i class="bi bi-youtube"></i> Watch Tutorial
                            </a>
                        </div>
                    <% } %>
                    
                    <% if (code.codeContent) { %>
                        <div class="card bg-dark mt-4">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <span class="text-white">Code</span>
                                <button class="btn btn-sm btn-outline-light" onclick="copyCode()">
                                    <i class="bi bi-clipboard"></i> Copy
                                </button>
                            </div>
                            <div class="card-body">
                                <pre id="codeBlock" class="text-white mb-0" style="white-space: pre-wrap; word-wrap: break-word;"><%= code.codeContent %></pre>
                            </div>
                        </div>
                    <% } %>
                    
                    <% if (code.files && code.files.length > 0) { %>
                        <div class="card mt-4">
                            <div class="card-header">
                                <h5 class="mb-0">Attached Files</h5>
                            </div>
                            <ul class="list-group list-group-flush">
                                <% code.files.forEach(file => { %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-file-earmark-code"></i> <%= file.name %></span>
                                        <a href="<%= file.url %>" target="_blank" class="btn btn-sm btn-primary">
                                            <i class="bi bi-download"></i> Download
                                        </a>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Downloads</span>
                            <strong><%= code.downloads || 0 %></strong>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Stars</span>
                            <strong><%= code.stars || 0 %> ‚≠ê</strong>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Version</span>
                            <strong><%= code.version %></strong>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Created</span>
                            <strong><%= new Date(code.createdAt).toLocaleDateString() %></strong>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Updated</span>
                            <strong><%= new Date(code.updatedAt).toLocaleDateString() %></strong>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <a href="/dashboard/codeshare/<%= code.id %>/edit" class="btn btn-warning w-100 mb-2">
                        <i class="bi bi-pencil"></i> Edit Code
                    </a>
                    <button onclick="deleteCode('<%= code.id %>')" class="btn btn-danger w-100">
                        <i class="bi bi-trash"></i> Delete Code
                    </button>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Quick Copy</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label">Discord Command</label>
                        <input type="text" class="form-control" readonly value=",codeshare publish <%= code.id %>">
                    </div>
                    <div>
                        <label class="form-label">Share Link</label>
                        <input type="text" class="form-control" readonly value="/codeshare/<%= code.id %>">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function copyCode() {
    const code = document.getElementById('codeBlock').innerText;
    navigator.clipboard.writeText(code).then(() => {
        alert('Code copied to clipboard!');
    });
}

function deleteCode(codeId) {
    if (confirm('Are you sure you want to delete this code? This cannot be undone.')) {
        fetch('/dashboard/codeshare/' + codeId + '/delete', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                window.location.href = '/dashboard/codeshare';
            } else {
                alert('Failed to delete code: ' + (data.error || 'Unknown error'));
            }
        });
    }
}
</script>
