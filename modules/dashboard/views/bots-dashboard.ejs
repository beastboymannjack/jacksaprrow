    <script>
        // Global state
        let allBots = [];
        let filteredBots = [];
        let analyticsCharts = {};
        let isLoading = false;
        let lastUpdateTime = null;
        let pollInterval = null;

        // Tab switching function
        function switchTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.add('hidden');
            });
            
            // Remove active class from all buttons
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Show selected tab
            const selectedTab = document.getElementById(tabName + '-tab');
            if (selectedTab) {
                selectedTab.classList.remove('hidden');
            }
            
            // Add active class to clicked button
            event.target.classList.add('active');

            // Load templates when switching to create tab
            if (tabName === 'create') {
                loadTemplates();
            }
        }

        // Load templates for bot creation
        async function loadTemplates() {
            const grid = document.getElementById('templateGrid');
            if (!grid || grid.dataset.loaded) return;

            try {
                const response = await fetch('/api/templates');
                if (!response.ok) {
                    throw new Error('Failed to load templates');
                }
                const data = await response.json();
                const templates = data.templates || [];

                if (templates.length === 0) {
                    grid.innerHTML = '<p style="color: #999;">No templates available</p>';
                    return;
                }

                grid.innerHTML = templates.map((t, index) => `
                    <div class="template-card ${index === 0 ? 'selected' : ''}" data-template="${t.id}" onclick="selectTemplate('${t.id}')">
                        <div class="template-icon">${t.emoji || 'ðŸ¤–'}</div>
                        <div class="template-name">${t.name}</div>
                        <div class="template-desc">${t.description}</div>
                        <ul class="template-features">
                            ${(t.features || []).slice(0, 4).map(f => `<li>${f}</li>`).join('')}
                        </ul>
                    </div>
                `).join('');

                grid.dataset.loaded = 'true';
                selectTemplate(templates[0].id);
            } catch (error) {
                console.error('Error loading templates:', error);
                grid.innerHTML = '<p style="color: red;">Error loading templates</p>';
            }
        }

        // Select bot template
        function selectTemplate(templateId) {
            document.querySelectorAll('.template-card').forEach(card => {
                card.classList.remove('selected');
            });
            const selected = document.querySelector(`[data-template="${templateId}"]`);
            if (selected) {
                selected.classList.add('selected');
            }
            document.getElementById('bottype').value = templateId;

            const lavalinkFields = ['lavalinkSection', 'lavalinkPortSection', 'lavalinkPasswordSection'];
            if (templateId === 'music') {
                lavalinkFields.forEach(id => document.getElementById(id).style.display = 'block');
            } else {
                lavalinkFields.forEach(id => document.getElementById(id).style.display = 'none');
            }
        }

        // Toggle advanced options
        function toggleAdvanced() {
            const section = document.getElementById('advancedSection');
            const icon = document.getElementById('advancedIcon');
            section.classList.toggle('show');
            icon.className = section.classList.contains('show') ? 'fa fa-chevron-up' : 'fa fa-chevron-down';
        }

        // Handle form submission
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('createBotForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const btn = document.getElementById('createBtn');
                    if (btn) {
                        btn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Deploying...';
                        btn.disabled = true;
                    }
                });

                // Color picker sync
                const colorInput = document.getElementById('color');
                const colorText = document.getElementById('colorText');
                if (colorInput) {
                    colorInput.addEventListener('change', function() {
                        colorText.value = this.value;
                    });
                }
            }
        }, false);

        // Handle CodeShare form submission
        function handleCodeShareForm() {
            const form = document.getElementById('createCodeShareForm');
            if (!form) return;

            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const formData = new FormData(form);
                const submitBtn = form.querySelector('button[type="submit"]');
                const originalText = submitBtn.innerHTML;
                
                try {
                    submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Creating...';
                    submitBtn.disabled = true;

                    const response = await fetch('/dashboard/codeshare/create', {
                        method: 'POST',
                        body: formData
                    });

                    if (response.ok) {
                        showAlert('Code Share created successfully!', 'success');
                        form.reset();
                        // Reload codeshare list
                        loadCodeShares();
                    } else {
                        const error = await response.json();
                        showAlert('Failed to create code share: ' + (error.message || 'Unknown error'), 'error');
                    }
                } catch (error) {
                    console.error('CodeShare creation error:', error);
                    showAlert('Error creating code share: ' + error.message, 'error');
                } finally {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }
            });
        }

        // Load user's code shares
        async function loadCodeShares() {
            try {
                const response = await fetch('/api/codeshare/list');
                if (!response.ok) return;
                
                const data = await response.json();
                const container = document.getElementById('codeShareContainer');
                const codes = data.codes || [];

                if (codes.length === 0) {
                    container.innerHTML = '<div style="grid-column: 1 / -1; text-align: center; padding: 40px; color: #b0b0b0;"><p><i class="fa fa-code" style="font-size: 32px; opacity: 0.5;"></i></p><p style="margin-top: 10px;">No code shares created yet. Create your first one above!</p></div>';
                    return;
                }

                container.innerHTML = codes.map(code => `
                    <div style="background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 12px; padding: 16px;">
                        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 12px;">
                            <div>
                                <h4 style="margin: 0; color: var(--text-primary); font-weight: 600;">${code.name}</h4>
                                <small style="color: var(--text-muted);">${code.id}</small>
                            </div>
                            <span style="background: #667eea; color: white; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 500;">${code.language}</span>
                        </div>
                        <p style="margin: 0 0 12px 0; color: var(--text-secondary); font-size: 0.9rem;">${code.description || 'No description'}</p>
                        <div style="display: flex; gap: 8px; margin-top: 12px;">
                            <a href="/dashboard/codeshare/${code.id}" class="btn-action btn-logs" style="flex: 1; text-align: center; text-decoration: none;"><i class="fa fa-eye"></i> View</a>
                            <button class="btn-action btn-delete" onclick="deleteCodeShare('${code.id}')" style="flex: 1;"><i class="fa fa-trash"></i> Delete</button>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error loading code shares:', error);
            }
        }

        // Delete code share
        async function deleteCodeShare(codeId) {
            if (!confirm('Are you sure you want to delete this code share?')) return;

            try {
                const response = await fetch(`/dashboard/codeshare/${codeId}/delete`, {
                    method: 'POST'
                });

                if (response.ok) {
                    showAlert('Code share deleted!', 'success');
                    loadCodeShares();
                } else {
                    showAlert('Failed to delete code share', 'error');
                }
            } catch (error) {
                console.error('Delete error:', error);
                showAlert('Error deleting code share', 'error');
            }
        }

        // Initialize dashboard on load
        document.addEventListener('DOMContentLoaded', () => {
            loadBots();
            handleCodeShareForm();
            loadCodeShares();
            
            // Add event listeners
            document.getElementById('searchInput').addEventListener('keyup', filterBots);
            document.getElementById('statusFilter').addEventListener('change', filterBots);

            // Start auto-refresh every 3 seconds
            startPolling(3000);
            
            // Update last refresh time periodically
            setInterval(updateLastRefreshTime, 1000);
        });

        // Start polling with configurable interval
        function startPolling(interval = 3000) {
            if (pollInterval) clearInterval(pollInterval);
            pollInterval = setInterval(loadBots, interval);
        }

        // Load bots from API with polling indicator
        async function loadBots() {
            if (isLoading) return; // Prevent duplicate requests
            
            isLoading = true;
            try {
                const response = await fetch('/api/bots/status/all');
                if (!response.ok) throw new Error('Failed to load bots');
                
                const data = await response.json();
                const newBots = data.bots || [];
                
                // Only update if data changed
                if (JSON.stringify(allBots) !== JSON.stringify(newBots)) {
                    allBots = newBots;
                    filterBots();
                    updateStats();
                    updateConnectionStatus(true);
                }
                
                lastUpdateTime = new Date();
            } catch (error) {
                console.error('Error loading bots:', error);
                updateConnectionStatus(false);
            } finally {
                isLoading = false;
            }
        }

        // Update connection status indicator
        function updateConnectionStatus(isConnected) {
            const statusEl = document.getElementById('connectionStatus');
            if (!statusEl) {
                const indicator = document.createElement('div');
                indicator.id = 'connectionStatus';
                indicator.style.cssText = `
                    position: fixed;
                    top: 20px;
                    right: 20px;
                    display: flex;
                    align-items: center;
                    gap: 8px;
                    padding: 8px 16px;
                    background: white;
                    border-radius: 20px;
                    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                    font-size: 12px;
                    font-weight: 600;
                    z-index: 999;
                `;
                document.body.appendChild(indicator);
            }
            
            const status = document.getElementById('connectionStatus');
            if (isConnected) {
                status.innerHTML = '<span style="width: 8px; height: 8px; border-radius: 50%; background: #28a745; animation: pulse 2s infinite;"></span>Connected';
                status.style.color = '#28a745';
            } else {
                status.innerHTML = '<span style="width: 8px; height: 8px; border-radius: 50%; background: #dc3545;"></span>Offline';
                status.style.color = '#dc3545';
            }
        }

        // Update last refresh time display
        function updateLastRefreshTime() {
            if (!lastUpdateTime) return;
            const now = new Date();
            const diff = Math.floor((now - lastUpdateTime) / 1000);
            const refreshLabel = document.getElementById('lastRefreshTime');
            if (refreshLabel) {
                refreshLabel.textContent = `Last update: ${diff < 60 ? diff + 's ago' : Math.floor(diff / 60) + 'm ago'}`;
            }
        }

        // Filter bots based on search and status
        function filterBots() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;

            filteredBots = allBots.filter(bot => {
                const matchesSearch = bot.name.toLowerCase().includes(searchTerm);
                const matchesStatus = !statusFilter || bot.status.toLowerCase() === statusFilter;
                return matchesSearch && matchesStatus;
            });

            renderBots();
        }

        // Render bot cards
        function renderBots() {
            const container = document.getElementById('botsContainer');

            if (filteredBots.length === 0) {
                container.innerHTML = `
                    <div style="grid-column: 1 / -1;">
                        <div class="empty-state">
                            <div class="empty-state-icon">ðŸ“­</div>
                            <div class="empty-state-title">No Bots Found</div>
                            <div class="empty-state-text">
                                ${allBots.length === 0 
                                    ? 'You haven\'t created any bots yet. Start by creating your first bot!' 
                                    : 'No bots match your search filters.'}
                            </div>
                            ${allBots.length === 0 ? `
                                <a href="/createbot" class="empty-state-button">Create Your First Bot</a>
                            ` : ''}
                        </div>
                    </div>
                `;
                return;
            }

            container.innerHTML = filteredBots.map(bot => createBotCard(bot)).join('');
        }

        // Create individual bot card HTML
        function createBotCard(bot) {
            const statusClass = bot.status.toLowerCase().replace(' ', '-');
            const statusText = bot.status || 'Unknown';
            const uptime = formatUptime(bot.uptime);
            const errorCount = bot.errors ? bot.errors.length : 0;

            return `
                <div class="bot-card">
                    <div class="bot-card-header">
                        <div>
                            <h3 class="bot-card-title">${escapeHtml(bot.name)}</h3>
                            <span class="bot-card-type">${escapeHtml(bot.template || 'Custom')}</span>
                        </div>
                    </div>
                    
                    <div class="bot-card-body">
                        <div class="status-badge status-${statusClass}">
                            <span class="status-dot"></span>
                            ${statusText}
                        </div>

                        <div class="bot-info-row">
                            <span class="info-label">Owner ID:</span>
                            <span class="info-value">${bot.ownerId || 'N/A'}</span>
                        </div>

                        <div class="bot-info-row">
                            <span class="info-label">Created:</span>
                            <span class="info-value">${formatDate(bot.createdAt)}</span>
                        </div>

                        <div class="bot-info-row">
                            <span class="info-label">Last Updated:</span>
                            <span class="info-value">${formatDate(bot.lastUpdated)}</span>
                        </div>

                        <div class="bot-metrics">
                            <div class="metric">
                                <div class="metric-value">${uptime}</div>
                                <div class="metric-label">Uptime</div>
                            </div>
                            <div class="metric">
                                <div class="metric-value">${errorCount}</div>
                                <div class="metric-label">Errors</div>
                            </div>
                        </div>
                    </div>

                    <div class="bot-card-footer">
                        <button class="btn-action btn-start" onclick="controlBot('${escapeHtml(bot.name)}', 'start')">
                            â–¶ Start
                        </button>
                        <button class="btn-action btn-stop" onclick="controlBot('${escapeHtml(bot.name)}', 'stop')">
                            â¹ Stop
                        </button>
                        <button class="btn-action btn-restart" onclick="controlBot('${escapeHtml(bot.name)}', 'restart')">
                            ðŸ”„ Restart
                        </button>
                        <button class="btn-action btn-logs" onclick="viewLogs('${escapeHtml(bot.name)}')">
                            ðŸ“‹ Logs
                        </button>
                        <button class="btn-action btn-restart" onclick="viewAnalytics('${escapeHtml(bot.name)}')">
                            ðŸ“Š Analytics
                        </button>
                        <button class="btn-action btn-delete" onclick="deleteBot('${escapeHtml(bot.name)}')">
                            ðŸ—‘ Delete
                        </button>
                    </div>
                </div>
            `;
        }

        // Bot control function
        async function controlBot(botName, action) {
            if (!confirm(`Are you sure you want to ${action} ${botName}?`)) return;

            try {
                const response = await fetch(`/api/bots/control/${encodeURIComponent(botName)}/${action}`, {
                    method: 'POST'
                });

                if (!response.ok) throw new Error('Control action failed');
                
                showAlert(`${botName} ${action} command sent!`, 'success');
                setTimeout(loadBots, 1000); // Reload after short delay
            } catch (error) {
                console.error(`Error ${action}ing bot:`, error);
                showAlert(`Failed to ${action} bot`, 'error');
            }
        }

        // Delete bot function
        async function deleteBot(botName) {
            if (!confirm(`WARNING: Are you sure you want to DELETE ${botName}? This cannot be undone!`)) return;
            if (!confirm(`Final confirmation: Delete ${botName} permanently?`)) return;

            try {
                const response = await fetch(`/api/bots/${encodeURIComponent(botName)}`, {
                    method: 'DELETE'
                });

                if (!response.ok) throw new Error('Delete failed');
                
                showAlert(`${botName} deleted successfully!`, 'success');
                loadBots();
            } catch (error) {
                console.error('Error deleting bot:', error);
                showAlert('Failed to delete bot', 'error');
            }
        }

        // View logs function
        function viewLogs(botName) {
            window.location.href = `/logs?bot=${encodeURIComponent(botName)}`;
        }

        // Update statistics
        function updateStats() {
            const total = allBots.length;
            const online = allBots.filter(b => b.status?.toLowerCase() === 'online').length;
            const offline = total - online;

            document.getElementById('totalBots').textContent = total;
            document.getElementById('onlineBots').textContent = online;
            document.getElementById('offlineBots').textContent = offline;
        }

        // Refresh dashboard
        function refreshDashboard() {
            loadBots();
            showAlert('Dashboard refreshed!', 'info');
        }

        // Utility Functions
        function formatDate(dateString) {
            if (!dateString) return 'Never';
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' });
        }

        function formatUptime(uptimeSeconds) {
            if (!uptimeSeconds || uptimeSeconds <= 0) return '0m';
            
            const days = Math.floor(uptimeSeconds / 86400);
            const hours = Math.floor((uptimeSeconds % 86400) / 3600);
            const minutes = Math.floor((uptimeSeconds % 3600) / 60);

            if (days > 0) return `${days}d`;
            if (hours > 0) return `${hours}h`;
            return `${minutes}m`;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function showAlert(message, type = 'info') {
            const alert = document.createElement('div');
            alert.className = `alert-message alert-${type}`;
            alert.textContent = message;
            document.body.appendChild(alert);

            setTimeout(() => {
                alert.remove();
            }, 4000);
        }

        // Analytics Functions
        async function viewAnalytics(botName) {
            const modal = document.getElementById('analyticsModal');
            const body = document.getElementById('analyticsBody');
            
            modal.classList.add('active');
            document.getElementById('analyticsTitle').textContent = `ðŸ“Š Analytics: ${botName}`;

            try {
                const response = await fetch(`/api/analytics/${encodeURIComponent(botName)}`);
                if (!response.ok) throw new Error('Failed to load analytics');
                
                const data = await response.json();
                const { analytics, stats, recentEvents } = data;

                if (!analytics) {
                    body.innerHTML = '<p style="text-align: center; padding: 40px;">No analytics data available yet.</p>';
                    return;
                }

                // Build analytics HTML
                const totalEvents = analytics.events ? analytics.events.length : 0;
                const healthPercent = stats?.healthPercentage || 100;

                body.innerHTML = `
                    <div class="analytics-grid">
                        <div class="analytics-card">
                            <div class="analytics-card-value">${stats?.totalStarts || 0}</div>
                            <div class="analytics-card-label">Total Starts</div>
                        </div>
                        <div class="analytics-card">
                            <div class="analytics-card-value">${stats?.totalCrashes || 0}</div>
                            <div class="analytics-card-label">Crashes</div>
                        </div>
                        <div class="analytics-card">
                            <div class="analytics-card-value">${stats?.totalCommands || 0}</div>
                            <div class="analytics-card-label">Commands Executed</div>
                        </div>
                        <div class="analytics-card">
                            <div class="analytics-card-value">${stats?.totalErrors || 0}</div>
                            <div class="analytics-card-label">Total Errors</div>
                        </div>
                        <div class="analytics-card">
                            <div class="analytics-card-value">${healthPercent}%</div>
                            <div class="analytics-card-label">Health</div>
                        </div>
                        <div class="analytics-card">
                            <div class="analytics-card-value">${totalEvents}</div>
                            <div class="analytics-card-label">Events Logged</div>
                        </div>
                    </div>

                    <div class="chart-container">
                        <div class="chart-title">ðŸ“ˆ Event Distribution</div>
                        <div class="chart-wrapper">
                            <canvas id="eventChart"></canvas>
                        </div>
                    </div>

                    <div class="chart-container">
                        <div class="chart-title">ðŸš€ Recent Events (Last 10)</div>
                        <div style="background: #f8f9fa; border-radius: 8px; padding: 15px;">
                            ${(recentEvents || []).slice(-10).reverse().map(evt => `
                                <div style="padding: 8px; border-bottom: 1px solid #e0e0e0; font-size: 13px;">
                                    <strong>${evt.type}</strong> - ${new Date(evt.timestamp).toLocaleString()}
                                </div>
                            `).join('') || '<p style="color: #999;">No recent events</p>'}
                        </div>
                    </div>
                `;

                // Draw chart
                setTimeout(() => {
                    const ctx = document.getElementById('eventChart');
                    if (ctx) {
                        const eventCounts = {
                            starts: stats?.totalStarts || 0,
                            stops: stats?.totalStops || 0,
                            crashes: stats?.totalCrashes || 0,
                            commands: stats?.totalCommands || 0,
                            errors: stats?.totalErrors || 0
                        };

                        new Chart(ctx, {
                            type: 'doughnut',
                            data: {
                                labels: ['Starts', 'Stops', 'Crashes', 'Commands', 'Errors'],
                                datasets: [{
                                    data: Object.values(eventCounts),
                                    backgroundColor: ['#667eea', '#764ba2', '#dc3545', '#28a745', '#ffc107'],
                                    borderColor: 'white',
                                    borderWidth: 2
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: false,
                                plugins: {
                                    legend: {
                                        position: 'right'
                                    }
                                }
                            }
                        });
                    }
                }, 100);
            } catch (error) {
                console.error('Error loading analytics:', error);
                body.innerHTML = `<p style="text-align: center; color: red; padding: 40px;">Error loading analytics: ${error.message}</p>`;
            }
        }

        function closeAnalyticsModal() {
            document.getElementById('analyticsModal').classList.remove('active');
        }

        // Close modal on outside click
        window.onclick = function(event) {
            const modal = document.getElementById('analyticsModal');
            if (event.target == modal) {
                modal.classList.remove('active');
            }
        }
    </script>
</body>
</html>
